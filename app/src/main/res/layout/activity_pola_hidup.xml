<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFFCF6"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <CheckBox
        android:id="@+id/checkout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:backgroundTint="#B54949"
        android:fontFamily="@font/chelsea_market"
        android:text="Olahraga teratur" />

    <CheckBox
        android:id="@+id/checkout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:fontFamily="@font/chelsea_market"
        android:text="Makan makanan bergizi" />

    <CheckBox
        android:id="@+id/checkout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/chelsea_market"
        android:text="Beristirahat dengan cukup" />

    <CheckBox
        android:id="@+id/checkout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:fontFamily="@font/chelsea_market"
        android:text="Banyak makan junk food" />

    <CheckBox
        android:id="@+id/checkout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/chelsea_market"
        android:text="Love your self" />

    <CheckBox
        android:id="@+id/checkout6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="225dp"
        android:fontFamily="@font/chelsea_market"
        android:text="Banyak Minum minuman manis" />

    <CheckBox
        android:id="@+id/checkout7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/chelsea_market"
        android:text="Fokus dengan tujuan hidup" />

    <CheckBox
        android:id="@+id/checkout8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="275dp"
        android:fontFamily="@font/chelsea_market"
        android:text="Jangan stress" />

    <CheckBox
        android:id="@+id/checkout9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:fontFamily="@font/chelsea_market"
        android:text="Jauhi hal hal negatif" />

    <CheckBox
        android:id="@+id/checkout10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="325dp"
        android:fontFamily="@font/chelsea_market"
        android:text="Rebahan sepanjang hari" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/chelsea_market"
        android:gravity="center_horizontal"
        android:shadowColor="#DCE3E4"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="Pola hidup sehat adalah seperti berikut :"
        android:textColor="#00BCD4"
        android:textSize="25sp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="375dp"
        android:fontFamily="@font/chelsea_market"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:shadowColor="#DCE3E4"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="Thankyou,next!!"
        android:textColor="#00BCD4"
        android:textSize="25sp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="575dp"
        android:fontFamily="@font/chelsea_market"
        android:gravity="right"
        android:shadowColor="#DCE3E4"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="Salsaa_39"
        android:textColor="#00BCD4"
        android:textSize="15sp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="575dp"
        android:fontFamily="@font/chelsea_market"
        android:gravity="left"
        android:shadowColor="#DCE3E4"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="4"
        android:textColor="#00BCD4"
        android:textSize="15sp"
        android:textStyle="italic" />


</RelativeLayout>